<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    tools:context="beangames.greenthumb.Info">

    <TextView
        android:textStyle="bold"
        android:id="@+id/top_bar"
        android:background="#16a085"
        android:text="GreenThumb"
        android:textColor="#12806A"
        android:textSize="65dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />
    <TextView
        android:id="@+id/bottom_bar"
        android:background="#5E4731"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Info"
        android:textSize="35dp"
        android:textColor="#ecf0f1"
        android:gravity="center"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_bar">
        <TextView
            android:id="@+id/thank_you"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Hello! Hope you like our app =) We made this app from scratch at nwHacks, a 36 hour hackathon. Our team consists of:\n
                Hai Hoang\n
                Jastine Irwan\n
                Ali Serag El-Din\n
                Bolat Khojayev\n
                Baber Arjumand\n
Special thanks to the organizers and sponsors of nwHacks and to all the wonderful volunteers!"/>
    </ScrollView>

</RelativeLayout>
