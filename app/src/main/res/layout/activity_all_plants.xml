            android:id="@+id/watermelon"
            android:layout_toRightOf="@id/watermlon_image"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Watermelon"
            android:textSize="35dp"
            android:layout_below="@id/turnip"
            android:onClick="plantNextPage" />

        <TextView
            android:id="@+id/all_plants_bottom"
            android:layout_below="@id/watermelon"
            android:background="#5E4731"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="All Plants"
            android:textSize="35dp"
            android:textColor="#ecf0f1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>
</ScrollView>




