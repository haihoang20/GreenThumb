<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="beangames.greenthumb.AllPlants"
    android:nestedScrollingEnabled="false">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:textStyle="bold"
            android:id="@+id/top_bar"
            android:background="#16a085"
            android:text="GreenThumb"
            android:textColor="#12806A"
            android:textSize="65dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/Sowing_Season_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_below="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sowing Season:"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
             />
        <TextView
            android:id="@+id/Sowing_Season_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Sowing_Season_Title"
            android:layout_marginBottom="10dp"
             />

        <TextView
            android:id="@+id/Harvest_Time_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harvest Time:"
            android:textSize="30dp"
            android:layout_below="@id/Sowing_Season_Description"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Harvest_Time_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Harvest_Time_Title"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/Time_to_Maturity_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time to Maturity:"
            android:textSize="30dp"
            android:layout_below="@id/Harvest_Time_Description"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Time_to_Maturity_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Time_to_Maturity_Title"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/Watering_Requirements_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watering:"
            android:textSize="30dp"
            android:layout_below="@id/Time_to_Maturity_Description"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Watering_Requirements_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Watering_Requirements_Title"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/Fertilization_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fertilization:"
            android:textSize="30dp"
            android:layout_below="@id/Watering_Requirements_Description"
            android:layout_marginBottom="10dp"

            />
        <TextView
            android:id="@+id/Fertilization_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Fertilization_Title"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/Seed_Depth_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seed Depth (Inches):"
            android:textSize="30dp"
            android:layout_below="@id/Fertilization_Description"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Seed_Depth_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Seed_Depth_Title"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/Row_Spacing_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row Spacing (Inches):"
            android:textSize="30dp"
            android:layout_below="@id/Seed_Depth_Description"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Row_Spacing_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Row_Spacing_Title"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/Plant_Spacing_Title"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plant Spacing (Inches):"
            android:textSize="30dp"
            android:layout_below="@id/Row_Spacing_Description"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Plant_Spacing_Description"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Descriptio nDescription escription"
            android:textSize="30dp"
            android:layout_below="@id/Plant_Spacing_Title"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/plants_bottom"
            android:layout_below="@id/Plant_Spacing_Description"
            android:background="#5E4731"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Plant"
            android:textSize="35dp"
            android:textColor="#ecf0f1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>
</ScrollView>




